import React, { useState } from "react";
import { base44 } from "@/api/base44Client";
import { useQuery, useMutation, useQueryClient } from "@tanstack/react-query";
import {
  Dialog,
  DialogContent,
  DialogHeader,
  DialogTitle,
} from "@/components/ui/dialog";
import { Button } from "@/components/ui/button";
import { Textarea } from "@/components/ui/textarea";
import { Badge } from "@/components/ui/badge";
import { ScrollArea } from "@/components/ui/scroll-area";
import { Send, MessageCircle } from "lucide-react";
import { format } from "date-fns";

export default function DoubtMessagesPanel({ onClose, providerId, myVideos }) {
  const queryClient = useQueryClient();
  const [selectedPurchase, setSelectedPurchase] = useState(null);
  const [replyMessage, setReplyMessage] = useState("");

  const videoIds = myVideos.map(v => v.id);

  const { data: purchasesWithSupport } = useQuery({
    queryKey: ['supportPurchases', providerId],
    queryFn: async () => {
      const purchases = await base44.entities.Purchase.filter({ 
        provider_id: providerId,
        support_included: true 
      }, '-created_date');
      return purchases;
    },
    initialData: [],
  });

  const { data: messages } = useQuery({
    queryKey: ['allDoubtMessages', videoIds],
    queryFn: async () => {
      const allMessages = await base44.entities.DoubtMessage.filter({}, 'created_date');
      return allMessages.filter(m => videoIds.includes(m.video_id));
    },
    initialData: [],
    enabled: videoIds.length > 0,
  });

  const { data: user } = useQuery({
    queryKey: ['currentUser'],
    queryFn: () => base44.auth.me(),
  });

  const sendReply = useMutation({
    mutationFn: async (messageText) => {
      return await base44.entities.DoubtMessage.create({
        purchase_id: selectedPurchase.id,
        video_id: selectedPurchase.video_id,
        sender_id: user.id,
        sender_name: user.full_name,
        sender_role: 'provider',
        message: messageText,
      });
    },
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['allDoubtMessages'] });
      setReplyMessage("");
    },
  });

  const purchaseMessages = selectedPurchase
    ? messages.filter(m => m.purchase_id === selectedPurchase.id)
    : [];

  return (
    <Dialog open={true} onOpenChange={onClose}>
      <DialogContent className="max-w-4xl h-[80vh]">
        <DialogHeader>
          <DialogTitle className="flex items-center gap-2">
            <MessageCircle className="w-5 h-5" />
            Student Doubts & Questions
          </DialogTitle>
        </DialogHeader>

        <div className="grid grid-cols-3 gap-4 h-full">
          {/* Purchase List */}
          <ScrollArea className="border rounded-lg p-3">
            <div className="space-y-2">
              {purchasesWithSupport.length === 0 ? (
                <p className="text-sm text-gray-500 text-center py-4">
                  No support requests yet
                </p>
              ) : (
                purchasesWithSupport.map((purchase) => {
                  const purchaseMessages = messages.filter(m => m.purchase_id === purchase.id);
                  const unreadCount = purchaseMessages.filter(m => 
                    m.sender_role === 'learner' && !m.is_read
                  ).length;

                  return (
                    <button
                      key={purchase.id}
                      onClick={() => setSelectedPurchase(purchase)}
                      className={`w-full text-left p-3 rounded-lg border transition-all ${
                        selectedPurchase?.id === purchase.id
                          ? 'border-orange-300 bg-orange-50'
                          : 'border-gray-200 hover:border-orange-200'
                      }`}
                    >
                      <div className="flex items-start justify-between mb-1">
                        <p className="font-medium text-sm line-clamp-1">
                          {purchase.learner_name}
                        </p>
                        {unreadCount > 0 && (
                          <Badge className="bg-red-500 text-white text-xs">
                            {unreadCount}
                          </Badge>
                        )}
                      </div>
                      <p className="text-xs text-gray-500 line-clamp-1">
                        {purchase.video_title}
                      </p>
                      <p className="text-xs text-gray-400 mt-1">
                        {purchaseMessages.length} messages
                      </p>
                    </button>
                  );
                })
              )}
            </div>
          </ScrollArea>

          {/* Messages */}
          <div className="col-span-2 flex flex-col border rounded-lg">
            {!selectedPurchase ? (
              <div className="flex-1 flex items-center justify-center text-gray-500">
                Select a conversation to view messages
              </div>
            ) : (
              <>
                <div className="p-4 border-b bg-gray-50">
                  <p className="font-semibold">{selectedPurchase.learner_name}</p>
                  <p className="text-sm text-gray-500">{selectedPurchase.video_title}</p>
                </div>

                <ScrollArea className="flex-1 p-4">
                  <div className="space-y-4">
                    {purchaseMessages.length === 0 ? (
                      <p className="text-center text-gray-500 py-8">
                        No messages in this conversation
                      </p>
                    ) : (
                      purchaseMessages.map((message) => (
                        <div
                          key={message.id}
                          className={`p-3 rounded-lg ${
                            message.sender_role === 'learner'
                              ? 'bg-blue-50 mr-12'
                              : 'bg-green-50 ml-12'
                          }`}
                        >
                          <div className="flex items-center justify-between mb-1">
                            <span className="font-semibold text-sm">{message.sender_name}</span>
                            <span className="text-xs text-gray-500">
                              {format(new Date(message.created_date), 'MMM d, HH:mm')}
                            </span>
                          </div>
                          <p className="text-sm text-gray-700">{message.message}</p>
                        </div>
                      ))
                    )}
                  </div>
                </ScrollArea>

                <div className="p-4 border-t bg-white">
                  <div className="flex gap-2">
                    <Textarea
                      placeholder="Type your reply..."
                      value={replyMessage}
                      onChange={(e) => setReplyMessage(e.target.value)}
                      rows={2}
                      className="flex-1"
                    />
                    <Button
                      onClick={() => {
                        if (replyMessage.trim()) {
                          sendReply.mutate(replyMessage);
                        }
                      }}
                      disabled={!replyMessage.trim() || sendReply.isPending}
                      className="bg-gradient-to-r from-green-500 to-emerald-500"
                    >
                      <Send className="w-4 h-4" />
                    </Button>
                  </div>
                </div>
              </>
            )}
          </div>
        </div>
      </DialogContent>
    </Dialog>
  );
}